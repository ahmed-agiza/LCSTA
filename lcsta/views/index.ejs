<!DOCTYPE html>
<html>
<head>
	<title>LCSTA | <%= title %></title>
	<link rel="icon" type="image/ico" href="images/favicon.ico">
	<script src="/javascripts/aui-min.js"></script>
	<link rel="stylesheet" href="/javascripts/bootstrap.min.css">
	<script src="/javascripts/jquery-2.1.3.min.js"></script>
	<link rel="stylesheet" href="/stylesheets/style.css" />
	<script type="text/javascript">
		function refreshView(){
			if($('#stdcells-0').is(':checked')){
				$('#upload-stdcell').hide();
				$('#stdcells-0').prop('checked', true);
				$('#stdcells-1').prop('checked', false); 
			}else{
				$('#upload-stdcell').show();
				$('#stdcells-1').prop('checked', true);
				$('#stdcells-0').prop('checked', false); 
			}			
		}
		 $(document).ready(function(){
		 	refreshView();
		 	$('#stdcells-0').change(refreshView);
		 	$('#stdcells-1').change(refreshView);
		 });
	</script>
	<div class = "row-header row">
		<div class = "col-lg-12 centered col-header">
			<ul id="tabs" class="nav nav-tabs navbar-header" data-tabs="tabs">
		                <li><a href="/" class= "navbar-branding" style="border-radius: 0 0 0 0; padding-right: 0.4em; padding-left: 0.4em;">LCSTA</a></li>
		                 <li style="height: 100%;"><a href="/about" class= "navbar-element" style="border-radius: 0 0 0 0; padding-right: 0.4em; padding-left: 0.4em;">About</a></li>
		    </ul>
	    </div>
    </div>
</head>
<body>
	
	<div class = "container round">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%if (message.length > 0){%>
					<p class="error-message"><%=message[0]%></p>
				<%}%>
				<form id="form-netlist" action="/circuit" method="post" enctype="multipart/form-data">
					<legend><h3><b>Verilog Netlist File Upload</b></h3></legend>
					<div class="form-group">
						<label class="control-label" for="netlist-btn">Netlist File:
							<div class="controls">
								<input name="netlist" id="netlist-btn" class="form-control field-required input-file" type="file">
							</div>
						</label>
					</div>
					<br/>
					<div class="form-group">
						<label class="control-label" for="stdcell-group">Standard Cells Library:</label>
						<div id= "stdcell-group"> 
							<label class="radio-inline" for="stdcells-0">
								<input type="radio" name="stdcells" id="stdcells-0" value="default" checked="checked">
								<div>Default Library</div>
							</label> 
							<label class="radio-inline" for="stdcells-1">
								<input type="radio" name="stdcells" id="stdcells-1" value="custom">
								<div>Upload Standard Cells Library</div>
							</label>
						</div>
						<br/>
						<label id="upload-stdcell" class="control-label" for="stdcellfile" style = "display: none;">Standard Cells Library File:
							<div class="controls">
								<input name="stdcellfile" id="stdcell-btn" class="form-control field-required input-file" type="file">
							</div>
						</label>
					</div>

					<div class="btn-group btn-group-justified" role="group" style = "width: 100%;">
						<input class="btn btn-info" type="submit" value="Submit!" style = "width: 100%;">
					</div>

				</form>
			</div>
		</div>
	</div>
</body>
</html>
